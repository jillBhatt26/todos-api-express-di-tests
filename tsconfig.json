{
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
    "compilerOptions": {
        "target": "es2016",
        "typeRoots": ["node_modules/@types", "src/types/app.d.ts"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "rootDir": "./src",
        "moduleResolution": "node",
        "baseUrl": "./src",
        "paths": {
            "@app": ["app"],
            "@config/*": ["config/*"],
            "@constants": ["constants"],
            "@db/*": ["db/*"],
            "@interfaces": ["interfaces"],
            "@middleware/*": ["middleware/*"],
            "@modules/*": ["modules/*"],
            "@router": ["router"],
            "@types": ["types"]
        },
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "files": ["./src/types/app.d.ts"]
}
